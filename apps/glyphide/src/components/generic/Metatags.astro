---
import { config } from '@/config'
import { pwaInfo } from 'virtual:pwa-info'

interface Props {
  title: string
  description: string
  keywords?: string
  meta: {
    image: string
    og: {
      title: string
      description: string
    }
    twitter: {
      title: string
      description: string
    }
  }
}

const { title, description, keywords, meta } = Astro.props
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="canonical" href="https://jsod.bypk.dev" />

<title>{title}</title>
<meta name="description" content={description} />
{keywords && <meta name="keywords" content={keywords} />}
<meta name="author" content="Pkcarreno" />

<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="icon" href="/favicon-32x32.png" type="image/png" sizes="32x32" />
<link rel="icon" href="/favicon-16x16.png" type="image/png" sizes="16x16" />
<meta name="theme-color" content={config.theme.light} />

<meta property="og:title" content={meta.og.title} />
<meta property="og:description" content={meta.og.description} />
<meta property="og:type" content="website" />
<meta property="og:image" content={config.site + meta.image} />
<meta property="og:url" content="https://glyphide.com" />
<meta property="og:site_name" content="Glyphide" />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={meta.twitter.title} />
<meta name="twitter:description" content={meta.twitter.description} />
<meta name="twitter:image" content={config.site + meta.image} />

{pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
