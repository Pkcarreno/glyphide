---
import Layout from '@/layouts/Layout.astro'
import { LinkMigrationWidget } from '@/components/migrate/LinkMigrationWidget'
import type { ComponentProps } from 'astro/types'

const metaData: ComponentProps<typeof Layout>['head'] = {
  title: 'Migrate Your Code - Glyphide',
  description:
    'Convert your existing JSOD/Glyphide links to the new format. Quick migration tool for previous users to access their saved JavaScript code.',
  keywords:
    'glyphide migration, convert code links, javascript code migration, update glyphide links, legacy code conversion',
  meta: {
    image: 'og-migrate.png',
    og: {
      title: 'Migrate Your JSOD/Glyphide Links',
      description:
        'Convert your existing links to the new format. Quick migration tool for previous Glyphide users.'
    },
    twitter: {
      title: 'Migrate Your JSOD/Glyphide Links',
      description:
        'Convert your existing links to the new format. Quick migration tool for previous users.'
    }
  }
}
---

<Layout head={metaData} class="h-full">
  <div class="flex h-full items-center justify-center">
    <LinkMigrationWidget client:load />
  </div>
</Layout>
