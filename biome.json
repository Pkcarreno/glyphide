{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "master"
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [".prettierrc.mjs", ".prettierignore", "*.astro", ".vercel", "dist", "dev-dist"]
  },
  "formatter": {
    "lineWidth": 100
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useFilenamingConvention": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "options": {
            "attributes": ["className"],
            "functions": ["clsx", "cva", "cn"]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "none",
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true,
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "overrides": [
    {
      "include": [
        "src/components/**/*.{astro,js,jsx,ts,tsx}",
        "src/layouts/**/*.{astro,js,jsx,ts,tsx}"
      ],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": {
              "level": "error",
              "options": {
                "strictCase": true,
                "filenameCases": ["PascalCase"]
              }
            }
          }
        }
      }
    },

    {
      "ignore": [
        "src/components/**/*.{astro,js,jsx,ts,tsx}",
        "src/layouts/**/*.{astro,js,jsx,ts,tsx}"
      ],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": {
              "level": "error",
              "options": {
                "strictCase": true,
                "filenameCases": ["kebab-case"]
              }
            }
          }
        }
      }
    }
  ]
}
