{
  "name": "glyphide",
  "type": "module",
  "version": "1.8.4",
  "description": "Write, run, and share JavaScript code instantly",
  "author": "Pedro Carre√±o (34664891+Pkcarreno@users.noreply.github.com)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run root:lint",
    "lint:fix": "turbo run root:lint:fix",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "check": "turbo run root:lint format type-check check",
    "type-check": "turbo run type-check",
    "root:lint": "biome check .",
    "root:lint:fix": "biome check --write .",
    "preinstall": "npx only-allow pnpm",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint",
    "prepare": "husky",
    "postinstall": "turbo run build --filter=@glyphide/quickjs",
    "knip": "knip"
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184",
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "husky": "^9.1.7",
    "knip": "^5.59.1",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "osMetadata": {
    "initVersion": "1.3.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pkcarreno/glyphide.git"
  }
}
